{
  "name": "tempad-dev",
  "description": "Inspect panel on Figma, for everyone.",
  "private": true,
  "version": "0.11.3",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && pnpm run build:rewrite && pnpm run build:plugins && pnpm run build:readme",
    "build:firefox": "wxt build -b firefox",
    "build:rewrite": "esbuild ./rewrite/figma.ts --outfile=./dist/figma.js --bundle --format=iife && cp ./public/rules/figma.json ./dist/figma.json",
    "build:plugins": "tsc -p ./plugins/tsconfig.json",
    "build:readme": "tsx ./build/readme.ts",
    "npm:plugins": "pnpm build:plugins && cd plugins && pnpm publish --access public && cd ..",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "vue-tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src *.cjs *.json *.md"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.112.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@types/prismjs": "^1.26.5",
    "@types/stringify-object": "^4.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vueuse/core": "^10.11.1",
    "@wxt-dev/module-vue": "^1.0.2",
    "comment-mark": "^1.1.1",
    "esbuild": "^0.25.4",
    "eslint": "^8.57.1",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-vue": "^9.33.0",
    "overlayscrollbars": "^2.11.3",
    "p-wait-for": "^6.0.0",
    "playwright-chromium": "^1.52.0",
    "prettier": "^3.5.3",
    "stringify-object": "^5.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vue": "^3.5.14",
    "vue-tsc": "^2.2.10",
    "wxt": "^0.20.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "playwright-chromium"
    ],
    "patchedDependencies": {
      "wxt": "patches/wxt.patch"
    }
  }
}
