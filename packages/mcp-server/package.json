{
  "name": "@tempad-dev/mcp",
  "version": "0.4.3",
  "description": "MCP server for TemPad Dev.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomfe/tempad-dev.git",
    "directory": "packages/mcp-server"
  },
  "bin": "dist/cli.mjs",
  "files": [
    "README.md",
    "dist/**/*"
  ],
  "type": "module",
  "main": "dist/cli.mjs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest --config vitest.config.ts",
    "test:run": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --fix",
    "format": "oxfmt --ignore-path ../../.gitignore",
    "format:check": "oxfmt --ignore-path ../../.gitignore --check",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "proper-lockfile": "^4.1.2",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tempad-dev/shared": "workspace:^0.1.0",
    "@types/node": "^24.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.5.12",
    "tsdown": "^0.20.0",
    "typescript": "^5.9.3",
    "unplugin-raw": "^0.6.3",
    "vitest": "4.0.18"
  }
}
