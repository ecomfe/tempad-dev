{
  "name": "@tempad-dev/mcp",
  "version": "0.3.12",
  "description": "MCP server for TemPad Dev.",
  "bin": "dist/cli.mjs",
  "files": [
    "README.md",
    "dist/**/*"
  ],
  "type": "module",
  "main": "dist/cli.mjs",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --fix",
    "format": "oxfmt --ignore-path ../../.gitignore",
    "format:check": "oxfmt --ignore-path ../../.gitignore --check",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "proper-lockfile": "^4.1.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tempad-dev/mcp-shared": "workspace:^0.1.0",
    "@types/node": "^24.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.5.12",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "unplugin-raw": "^0.6.3",
    "zod": "^4.1.12"
  }
}
