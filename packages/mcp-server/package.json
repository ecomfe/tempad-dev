{
  "name": "@tempad-dev/mcp",
  "description": "MCP server for TemPad Dev.",
  "version": "0.3.4",
  "type": "module",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown && cp src/instructions.md dist/instructions.md",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs",
    "format": "prettier --write \"**/*.{js,ts,mjs,cjs,cts,mts,json,md}\"",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@tempad-dev/mcp-shared": "workspace:^0.1.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "nanoid": "^5.1.6",
    "pino": "^9.14.0",
    "pino-pretty": "^11.2.2",
    "proper-lockfile": "^4.1.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.5.12",
    "tsdown": "^0.17.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  }
}
