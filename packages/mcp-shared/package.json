{
  "name": "@tempad-dev/mcp-shared",
  "version": "0.1.0",
  "description": "Shared MCP schemas/constants used by TemPad Dev extension and MCP server.",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "prepare": "pnpm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --fix",
    "format": "oxfmt --ignore-path ../../.gitignore",
    "format:check": "oxfmt --ignore-path ../../.gitignore --check"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3"
  }
}
